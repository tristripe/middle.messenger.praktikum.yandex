<div class="popup-outer-wrapper">
    <section class="popup">
        <div class="popup__wrapper">
            <button class="popup__close" type="button">
                <img src="../images/cross.svg" alt="Закрыть окно" width="29" height="29">
            </button>
            <h1 class="title login__title">Изменить свой пароль</h1>
            <div class="form">
                <form>
                    <label class="form__label">
                        <span class="form__title">Текущий пароль</span>
                        <input type="password" name="oldPassword" id="oldPassword" class="form__input">
                    </label>
                    <label class="form__label">
                        <span class="form__title">Новый пароль</span>
                        <input type="password" name="newPassword" id="newPassword" class="form__input">
                    </label>
                    <label class="form__label">
                        <span class="form__title">Подтвердите пароль</span>
                        <input type="password" name="confirmPassword" id="confirmPassword" class="form__input">
                    </label>
                    <div class="form__submit-wrapper">
                        <button type="button" class="form-button form-button--cancel">Отмена</button>
                        <button type="button" class="form-button form-button--confirm">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>